<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/textStyleContainer"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/color_contrary"
    android:elevation="2dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ripple_light_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="Color"
        android:textAlignment="gravity"
        android:textColor="@color/colorPrimaryText"
        app:drawableTopCompat="@drawable/ic_color" />

    <TextView
        android:id="@+id/item_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ripple_light_bg"
        android:clickable="true"
        android:text="Image"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText"
        app:drawableTopCompat="@drawable/ic_image" />

    <TextView
        android:id="@+id/item_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ripple_light_bg"
        android:clickable="true"
        android:text="Text style"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText"
        app:drawableTopCompat="@drawable/ic_text" />

</LinearLayout>